package com.example.taberogu.repository;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.example.taberogu.entity.resutaurant;

public interface RestaurantRepository extends JpaRepository<resutaurant, Integer>{

	 public Page<resutaurant> findByNameLikeOrAddressLike(String nameKeyword, String addressKeyword, Pageable pageable);    
     public Page<resutaurant> findByAddressLike(String area, Pageable pageable);
     public Page<resutaurant> findByPriceLessThanEqual(Integer price, Pageable pageable);    
}
